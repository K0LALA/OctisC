{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}/octis.out",
                "-I/usr/include/SDL2",
                "-D_REENTRANT",
                "-lSDL2",
                "-lSDL2_ttf",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "C static build",
            "command": "gcc -fdiagnostics-color=always -Wall -g ${workspaceFolder}/*.c -o ${workspaceFolder}/octis.out -I/usr/include/SDL2 $(sdl2-config --cflags --static-libs) /usr/lib/libSDL2_ttf.a",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}